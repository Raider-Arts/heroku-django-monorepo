#!/usr/bin/env bash

shopt -s dotglob

function log() {
    echo "-----> $*"
}

function indent() {
    sed -e 's/^/       /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"
TMPAPP="${STAGE}/TEMP_APP"
TMPLIBS="${STAGE}/TEMP_LIBS"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
  echo "APP_BASE was not set. Aborting" | indent
  exit 1
fi
if [ ! -f "${ENV_DIR}/APP_LIBS" ]; then
  echo "APP_LIBS was not set. Aborting" | indent
  exit 1
fi

APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"
APP_LIBS="$(cat "${ENV_DIR}/APP_LIBS")"

echo "${APP_BASE}"
echo "${APP_LIBS}"
echo "${TMPAPP}"
echo "${TMPLIBS}"

(
  mkdir "${TMPLIBS}" &&
  mkdir "${TMPAPP}" &&
  mv "${BUILD_DIR}/${APP_BASE}" "${TMPAPP}/$(basename "$APP_BASE")" &&
  mv "${BUILD_DIR}/${APP_LIBS}" "${TMPLIBS}/$(basename "$APP_LIBS")" &&
  rm -rf "${BUILD_DIR}"/* &&
  mv "${TMPAPP}/$(basename "$APP_BASE")"/* "${BUILD_DIR}"
  mv "${TMPLIBS}/$(basename "$APP_LIBS")"/* "..${BUILD_DIR}"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directories into place" | indent
    exit 1
fi